<table id="report-table-container" cellspacing="10" cellpadding="0">

	<tr class="report-table-header">
		<td class="card" align="left" valign="top">
			<table width="100%" border="0" cellpadding="0" cellspacing="0" id="report-header-container">
				<tr><!-- HEADER // -->
					<td>
						<table border="0" cellpadding="0" cellspacing="0" width="100%" id="">
							<tr>
								<td width="100%" align="left" class="-text">
									Push details:
								</td>
								<td align="left" class="">
									<strong>Date:</strong> 08/06/16 18:3718:00
								</td>
								<td align="left" class="">
									<strong>Author:</strong> {{payload.pusher.name}}
								</td>
								<td align="left" class="">
									<strong>Organization:</strong> {{payload.organization.login}}
								</td>
							</tr>
							<tr>
								<td colspan="4">Commits:</td>
							</tr>
							{{#payload.commits}}
							<tr>
								<td colspan="4"><a href="{{url}}" target="_blank">{{url}}</a><br>{{message}}</td>
							</tr>
							{{/payload.commits}}
					</td>
				</tr><!-- // END HEADER -->
			</table>
		</td>
	</tr>

	<tr class="report-table-body">
		<td class="card" align="left" valign="top">
			<table width="100%" border="0" cellpadding="0" cellspacing="0" id="email-container" class="panel half-size">
				<tr><!-- BODY // -->
					<td>
						<table border="0" cellpadding="0" cellspacing="0" width="100%" id="">
							<tr>
								<td align="left" class="">
									Test Results:
								</td>
							</tr>
							{{#result.[0]}}
							<tr>
								<td align="left" class="">
									<strong>{{info.req.method}}</strong> - {{info.req.url}} - <strong class="{{#if validation.valid}}valid{{else}}invalid{{/if}}">{{#if validation.valid}}Valid Schema{{else}}Invalid Schema{{/if}}</strong>
									<ul>
										{{#if validation.errors}}<li><strong class="large">Errors:</strong></li>{{/if}}
									{{#validation.errors}}
										<li><i class="light">{{path}}</i><br><strong class="invalid">{{code}}</strong> - {{message}}</li>
									{{/validation.errors}}
									</ul>
								</td>
							</tr>
							{{/result.[0]}}
						</table>
					</td>
				</tr><!-- // END BODY -->
			</table>
		</td>
	</tr>

	<tr class="report-table-footer">
		<td class="card" align="center" valign="top">

			<table border="0" cellpadding="0" cellspacing="0" id="report-footer-container">
				<tr><!-- FOOTER // -->
					<td>
						<table border="0" cellpadding="0" cellspacing="0" width="100%" id="">
							<tr>
								<td align="center" class="-text">
									This email was sent to you automatically from <a href="{{data.platform}}">platform.com</a>
								</td>
							</tr>
						</table>
					</td>
				</tr><!-- // END FOOTER -->
			</table>
		</td>
	</tr>

</table>